{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/", "build/", "dist/"],
  "rules": {
    "semi": "off",
    "no-console": "warn",
    "no-unused-vars": "error",
    "quotes": ["error", "double"],
    "@typescript-eslint/quotes": "off",
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/space-before-function-paren": "off"
  }
}
